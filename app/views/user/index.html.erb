<% if @users.blank? %>
    <h4>There are no users currently in this system</h4>
<% else %>
    <h4>List of blog Authors</h4>
    <ul id = 'users'>
        <% @users.each do |user| %>
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                    <%= link_to user_path(user.id) do %>
                    <img src="<%= user.Photo %>" class="img-fluid img-thumbnail" alt="User Profile">
                    <% end %>
                    </div>
                    <div class="col-md-8">
                    <div class="card-body">
                    <%= link_to user_path(user.id) do %>
                        <h5 class="card-title"><%= user.Name %></h5>
                    <% end %>
                        <p class="card-text"><small class="text-muted">Number of posts: <%= user.posts.count %></small></p>
                    </div>
                    </div>
                    </div>
                </div>
        <% end %>
    </ul>

<% end %>